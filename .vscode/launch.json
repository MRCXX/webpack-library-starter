{
  "version": "0.2.0",
  "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "Mocha debug",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
            "--require",
            "@babel/register",
            "--colors",
            "./test/*.spec.js"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
    }
  ]
}